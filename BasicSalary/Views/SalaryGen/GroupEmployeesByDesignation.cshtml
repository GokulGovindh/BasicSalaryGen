@using BasicSalary.Domain.ViewModel
@model List<GroupedEmployeeViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Grouped Employee Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            text-align: center;
        }

        h1 {
            color: #333;
            font-size: 32px;
            margin-bottom: 20px;
        }

        h2 {
            color: #555;
            font-size: 28px;
            margin-bottom: 5px;
        }

        table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: white;
            border: 1px solid #ccc;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
            font-size: 18px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        p {
            font-weight: bold;
            margin-top: 5px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <h1>Grouped Employee Details</h1>
    <div align="right">
        <a asp-controller="SalaryGen" asp-action="Index" class="btn btn-primary">Home</a>
    </div>
    <br />

    <table>
        <thead>
            <tr>
                <th>Designation</th>
                <th>Salary Based on Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>
                        <h4>@group.Designation</h4>
                    </td>
                    <td>
                        <p>Total Basic Salary: ₹@group.TotalBasicSalary</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>







