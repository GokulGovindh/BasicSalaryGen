@using BasicSalary.Domain.ViewModel;
@model List<EmployeeViewModel>

<style>
    /* Define table and cell styles */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
            border-bottom: 2px solid #ddd;
        }

        .table td {
            border-bottom: 1px solid #ddd;
        }

            .table td.employee-id {
                font-weight: bold;
            }

            .table td.employee-name {
                font-weight: bold;
            }
</style>

<h2>Payslip Details</h2>
<div align="right">
    <a asp-controller="SalaryGen" asp-action="Index" class="btn btn-primary">Home</a>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Month</th>
            <th>Basic Salary</th>
            <th>Allowance</th>
            <th>PF</th>
            <th>Working Days</th>
            <th>Leave Days</th>
            <th>Total Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="employee-id">@item.EmployeeId</td>
                <td>@item.Month</td>
                <td>@item.BasicSalary</td>
                <td>@item.Allowance</td>
                <td>@item.PF</td>
                <td>@item.WorkingDays</td>
                <td>@item.LeaveDays</td>
                <td>@item.TotalSalary</td>
            </tr>
        }
    </tbody>
</table>




