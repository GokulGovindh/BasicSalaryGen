@{
    ViewData["Title"] = "Enter Year and Month";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="SalaryGen" asp-action="GetSalaries" method="get">
    <div class="form-group">
        <label for="year">Year:</label>
        <input type="number" class="form-control" id="year" name="year" required>
    </div>
    <div class="form-group">
        <label for="month">Month:</label>
        <input type="text" class="form-control" id="month" name="month" required>
    </div>
    <button type="submit" class="btn btn-primary">Get Salaries</button>
</form>
