@using BasicSalary.Domain.ViewModel;
@using System.Globalization;
@model EmployeeViewModel

@{
    // Generate a list of years starting from the current year and going back 10 years
    List<int> years = new List<int>();
    int currentYear = DateTime.Now.Year;
    for (int i = currentYear; i >= currentYear - 3; i--)
    {
        years.Add(i);
    }
    //string[] monthAbbreviations = CultureInfo.CurrentCulture.DateTimeFormat.AbbreviatedMonthNames;
    //string[] monthNames = CultureInfo.CurrentCulture.DateTimeFormat.MonthNames;
}

